<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Login</h1>
  <form action="/login" method="post">
  <div style="display: inline-block; margin-top: 20px;">
    <!-- <input type="radio" id="emailOption" name="loginOption" value="email" checked> -->
    <label for="emailOption">Email <input type="radio" id="emailOption" name="loginOption" value="email" checked></label>
  </div>
  <div style="display: inline-block; margin-left: 0px;">
    <!-- <input type="radio" id="phoneOption" name="loginOption" value="phone"> -->
    <label for="phoneOption">Phone Number<input type="radio" id="phoneOption" name="loginOption" value="phone"></label>
  </div>
  <br>
  <div id="emailInput">
    <label for="email">Email:</label>
    <input type="email" name="email" id="email">
  </div>
  <div id="phoneInput" style="display:none;">
    <label for="phone">Phone Number:</label>
    <input type="tel" name="phone" id="phone" pattern="[0-9]{10}">
  </div>
    <button type="submit">Login</button>
  </form>

  <!-- validating email or phone number details -->
  <script>
    document.getElementsByName('loginOption').forEach((option) => {
      option.addEventListener('change', () => {
        if (option.value === 'email') {
          document.getElementById('emailInput').style.display = 'block';
          document.getElementById('phoneInput').style.display = 'none';
        } else {
          document.getElementById('emailInput').style.display = 'none';
          document.getElementById('phoneInput').style.display = 'block';
        }
      });
    });
  </script>
</body>
</html>